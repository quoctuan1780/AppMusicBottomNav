<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_albumonline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="30dp"
        android:id="@+id/tb_album_online_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_album_online_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_album_online_all"
        android:background="@drawable/miku"/>
    <SearchView
        android:id="@+id/sv_timkiem_album_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search"
        android:layout_below="@id/iv_album_online_all"
        android:iconifiedByDefault="false"
        android:queryHint="Tìm kiếm bài bát...">

    </SearchView>
    <ListView
        android:id="@+id/lv_album_online_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_timkiem_album_online"/>
</RelativeLayout>