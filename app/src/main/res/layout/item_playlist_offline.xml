<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/ll_bt_tao_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <Button
            android:id="@+id/bt_tao_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_create"
            android:text="Táº¡o playlist">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sapxep_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@+id/ll_bt_tao_playlist"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_sapxep_playlist"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_black_24dp">

        </ImageButton>
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/sort"
            android:gravity="center|center_vertical"
            android:textSize="14dp"
            android:fontFamily="sans-serif">
        </TextView>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_playlist_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_sapxep_playlist">
    </ListView>
</RelativeLayout>