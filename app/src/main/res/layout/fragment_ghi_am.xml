<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nen2"
    tools:context=".fragment.GhiAm">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_BHghiam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Danh sách beat bài hát"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_timkiemBHghiam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_BHghiam"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/sv_timkiemBHghiam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/search"
            android:iconifiedByDefault="false"
            android:queryHint="Tìm kiếm bài bát..."></SearchView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sapxep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_timkiemBHghiam"
        android:orientation="horizontal"
        android:paddingTop="10dp">
               <ImageButton
            android:id="@+id/ib_sapxep"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_black_24dp">

        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center|center_vertical"
            android:text="@string/sort"
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_danhsachBHghiam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_sapxep"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp">
    </ListView>



</RelativeLayout>