<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/ll_thanhphatnhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_thoigianchay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textColor="@color/nav_select"
            android:textSize="15sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/sk_phatnhac"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/text_color"
            android:fitsSystemWindows="true"
            android:progressTint="@color/nav_select"
            android:thumbTint="@color/nav_select" />

        <TextView
            android:id="@+id/tv_tongthoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/final_time"
            android:textColor="@color/nav_select"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thanhdieukhiennhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ll_thanhphatnhac"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_lui_10_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_lui_10s" />

        <ImageButton
            android:id="@+id/ib_baitruoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_skip_previous_black_24dp" />

        <ImageButton
            android:id="@+id/ib_choinhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <ImageButton
            android:id="@+id/ib_baiketiep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_skip_next_black_24dp" />

        <ImageButton
            android:id="@+id/ib_toi_10_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_toi_10s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ll_thanhdieukhiennhac"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_laplai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_loop_is_not_loop_24dp" />
        <ImageButton
            android:id="@+id/ib_nghengaunhien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_random_is_not_random_24dp" />
    </LinearLayout>

</RelativeLayout>