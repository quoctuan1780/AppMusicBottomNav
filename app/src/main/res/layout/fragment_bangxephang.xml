<?xml version="1.0" encoding="utf-8"
    ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BangXepHang">

    <SearchView
        android:id="@+id/search_bxh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:queryHint="Search here"
        android:paddingTop="80dp"
        android:searchIcon="@drawable/ic_search_black_24dp"
        android:background="@drawable/roundcorner1" />
    <ViewFlipper
        android:id="@+id/imgview_bhx"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/search_bxh"
        android:gravity="center|center_horizontal"
        >
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/ll_bxh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgview_bhx"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center|center_horizontal">
        <Button
            android:id="@+id/bxhVN"
            android:layout_width="200dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:text="Bảng xếp hạng Nhạc trẻ "
            android:layout_height="100dp"
            android:background = "@drawable/top100tt"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/bxhUSUK"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/top100nt"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bxh1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/ll_bxh"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bxhAsia"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background = "@drawable/top100pop"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/bxhKPOP"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background = "@drawable/top100remix"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tv_top100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_bxh1"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/top100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 100 bài hát"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-light"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_bxh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tv_top100"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/background_bxh"/>

</RelativeLayout>







